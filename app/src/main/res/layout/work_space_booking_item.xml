<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        app:cardBackgroundColor="@color/workspace_color"
        app:cardCornerRadius="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp">

            <ImageView
                android:id="@+id/moca_m_image_view"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:src="@drawable/ic_moca_m"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/accent_color" />

            <TextView
                android:id="@+id/booking_type_text_view"
                style="@style/sf_pro_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hourly"
                android:textColor="@color/white"
                android:textSize="@dimen/_21sdp"
                app:layout_constraintStart_toStartOf="@id/moca_m_image_view"
                app:layout_constraintTop_toBottomOf="@id/moca_m_image_view" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/end_lottie_view"
                style="@style/lottie_style"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_130sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_clipToCompositionBounds="true"
                app:lottie_rawRes="@raw/tailored" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/bottom_lottie_view"
                style="@style/lottie_style"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginTop="-40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/booking_type_text_view"
                app:lottie_clipToCompositionBounds="true"
                app:lottie_rawRes="@raw/day_pass" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/lottie_barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="end_lottie_view,bottom_lottie_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/desc_text_view"
                style="@style/sf_pro_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/moca_m_image_view"
                app:layout_constraintTop_toBottomOf="@id/lottie_barrier"
                tools:text="Get a peace-of-mind with a full day pass with unlimited working hours and full access to all location facilities, spaces and services." />

            <TextView
                android:id="@+id/start_from_text_view"
                style="@style/sf_pro_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_11sdp"
                android:text="@string/starts_from"
                android:textColor="@color/light_black_color"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="@id/moca_m_image_view"
                app:layout_constraintTop_toBottomOf="@id/desc_text_view" />

            <TextView
                android:id="@+id/currency_text_view"
                style="@style/sf_pro_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black_color"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintStart_toStartOf="@id/moca_m_image_view"
                app:layout_constraintTop_toBottomOf="@id/start_from_text_view"
                tools:text="EGP" />

            <TextView
                android:id="@+id/price_text_view"
                style="@style/sf_pro_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black_color"
                android:textSize="@dimen/_35sdp"
                app:layout_constraintStart_toStartOf="@id/moca_m_image_view"
                app:layout_constraintTop_toBottomOf="@id/currency_text_view"
                tools:text="150" />

            <TextView
                android:id="@+id/per_type_text_view"
                style="@style/sf_pro_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black_color"
                android:textSize="@dimen/_24sdp"
                app:layout_constraintBottom_toBottomOf="@id/price_text_view"
                app:layout_constraintStart_toEndOf="@id/price_text_view"
                tools:text="/Hour" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/select_plan_btn"
                style="@style/app_button_style.accent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:text="@string/select_plan"
                app:layout_constraintTop_toBottomOf="@id/price_text_view" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/select_plan_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_11sdp"
                app:dividerColor="@color/black_30"
                app:layout_constraintTop_toBottomOf="@id/select_plan_btn" />

            <TextView
                android:id="@+id/terms_of_use_text_view"
                style="@style/sf_pro_regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/select_plan_divider"
                tools:text="No time limit" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>