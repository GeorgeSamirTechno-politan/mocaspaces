<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_20sdp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/meeting_guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.40" />

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/meeting_room_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/text_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/meeting_guide_line"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/expand_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:src="@drawable/ic_expand"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/meeting_room_status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_9sdp"
            android:background="@drawable/green_shape"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:text="@string/open"
            android:textColor="@color/light_black_color"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/meeting_guide_line"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/meeting_room_name"
                style="@style/medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/accent_color"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Palm Hall @" />

            <TextView
                android:id="@+id/meeting_location_name_text_view"
                style="@style/medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/meeting_room_name"
                app:layout_constraintTop_toBottomOf="@id/meeting_room_name"
                tools:text="Palm Hils Club" />

            <TextView
                android:id="@+id/meeting_location_address_text_view"
                style="@style/regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/meeting_location_name_text_view"
                app:layout_constraintTop_toBottomOf="@id/meeting_location_name_text_view"
                tools:text="Zayed City, Giza" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/meeting_info_top_divider"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_7sdp"
                app:dividerColor="@color/grey_color_90_percent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/meeting_location_address_text_view" />


            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/meeting_info_horizontal_divider"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_7sdp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/meeting_divider_bottom"
                app:dividerColor="@color/grey_color_90_percent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/meeting_location_address_text_view" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/price_capacity_guide_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <LinearLayout
                android:id="@+id/capacity_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@id/price_capacity_guide_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/meeting_info_top_divider">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_persons" />

                <TextView
                    style="@style/regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/capacity"
                    android:textAlignment="center"
                    android:textColor="@color/accent_color"
                    android:textSize="@dimen/_8sdp" />

            </LinearLayout>

            <TextView
                android:id="@+id/capacity_text_view"
                style="@style/medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/accent_color"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintEnd_toStartOf="@id/price_capacity_guide_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/capacity_layout"
                tools:text="12" />

            <TextView
                android:id="@+id/pax_text_view"
                style="@style/regular"
                android:textAlignment="center"
                android:textColor="@color/accent_color"
                android:textSize="@dimen/_9sdp"
                android:text="@string/pax"
                app:layout_constraintEnd_toStartOf="@id/price_capacity_guide_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/capacity_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/meeting_divider_bottom"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/pax_text_view"
                android:layout_height="@dimen/_1sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical"
                app:dividerColor="@color/grey_color_90_percent"/>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/meeting_room_view_pager_adapter"
                android:layout_width="0dp"
                app:layout_constraintBottom_toTopOf="@id/meeting_divider_bottom"
                app:layout_constraintTop_toBottomOf="@id/meeting_info_top_divider"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/price_capacity_guide_line"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/meeting_room_check_price_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/meeting_divider_bottom"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/check_price"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/app_button_style.accent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>