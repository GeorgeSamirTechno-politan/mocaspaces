    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_text_input"
        style="@style/text_input_layout_style.workspace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:boxBackgroundColor="@color/accent_color"
        app:boxCollapsedPaddingTop="0dp"
        app:boxStrokeWidth="@dimen/_2sdp"
        app:boxStrokeWidthFocused="@dimen/_2sdp"
        app:endIconCheckable="true"
        app:endIconDrawable="@drawable/ic_home_search"
        app:endIconMode="custom"
        app:endIconScaleType="center"
        app:errorEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconCheckable="true"

        app:startIconDrawable="@drawable/ic_moca_m"
        app:startIconScaleType="centerInside">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/search_item_auto_complete_text"
            style="@style/edit_text_style.white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:popupElevation="@dimen/_1sdp"
            android:textSize="@dimen/_13sdp"
            app:simpleItemSelectedRippleColor="@color/grey_color" />

    </com.google.android.material.textfield.TextInputLayout>


