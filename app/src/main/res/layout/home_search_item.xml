<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/_15sdp"
    android:paddingStart="@dimen/_15sdp"
    android:paddingEnd="@dimen/_30sdp"
    android:animateLayoutChanges="true"
    android:paddingVertical="@dimen/_10sdp">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_text_input"
        style="@style/text_input_layout_style.workspace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        app:boxCollapsedPaddingTop="0dp"
        app:boxStrokeWidth="@dimen/_2sdp"
        app:endIconTint="@color/workspace_color"
        app:errorEnabled="false"
        app:boxStrokeWidthFocused="@dimen/_2sdp"
        app:endIconCheckable="true"
        app:endIconDrawable="@drawable/ic_home_search"
        app:endIconMode="custom"
        app:endIconScaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconCheckable="true"
        app:startIconDrawable="@drawable/ic_moca_m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:startIconScaleType="centerInside">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_item_edit_text"
            style="@style/edit_text_style.white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textSize="@dimen/_13sdp" />

    </com.google.android.material.textfield.TextInputLayout>

