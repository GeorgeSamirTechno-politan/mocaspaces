<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/type_start_from_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/accent_color"
        android:textSize="@dimen/_10sdp"
        style="@style/regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hourly Starting" />

    <TextView
        android:id="@+id/price_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/medium"
        android:textSize="@dimen/_18sdp"
        tools:text="140"
        android:textColor="@color/accent_color"
        app:layout_constraintTop_toBottomOf="@id/type_start_from_text_view"/>

    <TextView
        android:id="@+id/per_type_text_view"
        app:layout_constraintBottom_toBottomOf="@id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="/hour"
        style="@style/regular"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/accent_color"
        app:layout_constraintStart_toEndOf="@id/price_text_view"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/currency_text_view"
        app:layout_constraintTop_toBottomOf="@id/price_text_view"
        android:layout_width="wrap_content"
        style="@style/regular"
        android:textColor="@color/accent_color"
        tools:text="EGP"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>