<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/what_you_got_header_text"
        style="@style/medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/what_you_got"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/what_you_got_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        app:layout_constraintEnd_toEndOf="@id/what_you_got_header_text"
        app:layout_constraintStart_toStartOf="@id/what_you_got_header_text"
        app:layout_constraintTop_toBottomOf="@id/what_you_got_header_text"
        tools:text="test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test " />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/booking_terms_of_use_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:animateLayoutChanges="true"
        app:layout_constraintEnd_toEndOf="@id/what_you_got_header_text"
        app:layout_constraintStart_toStartOf="@id/what_you_got_header_text"
        app:layout_constraintTop_toBottomOf="@id/what_you_got_text_view">


        <TextView
            android:id="@+id/terms_of_use_header_text_view"
            style="@style/medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms_of_use_with_single_dots"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/terms_of_use_arrow_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:src="@drawable/ic_expand_arrow"
            app:layout_constraintBottom_toBottomOf="@id/terms_of_use_header_text_view"
            app:layout_constraintStart_toEndOf="@id/terms_of_use_header_text_view"
            app:layout_constraintTop_toTopOf="@id/terms_of_use_header_text_view"
            app:tint="@color/accent_color" />

        <TextView
            android:visibility="gone"
            android:id="@+id/terms_of_use_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarSize="@dimen/_3sdp"
            android:scrollbarThumbVertical="@drawable/scroll_bar_active"
            android:scrollbarTrackVertical="@drawable/scroll_bar_in_active"
            android:scrollbars="vertical"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="@dimen/_50sdp"
            app:layout_constraintStart_toStartOf="@id/terms_of_use_header_text_view"
            app:layout_constraintTop_toBottomOf="@id/terms_of_use_header_text_view"
            tools:text="test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test " />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.technopolitan.mocaspaces.utilities.transitionButton.TransitionButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/book_btn"
        style="@style/progress_button_style.accent"
        app:layout_constraintTop_toBottomOf="@id/booking_terms_of_use_layout"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_70sdp"
        android:layout_marginEnd="@dimen/_70sdp"
        android:text="@string/book"/>

    <TextView
        android:id="@+id/price_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bold"
        android:layout_marginTop="@dimen/_7sdp"
        android:textSize="@dimen/_13sdp"
        tools:text="Total EGP 300"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_25sdp"
        android:textColor="@color/accent_color"
        app:layout_constraintTop_toBottomOf="@id/book_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>