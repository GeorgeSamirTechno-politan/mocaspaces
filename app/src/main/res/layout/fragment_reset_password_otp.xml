<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    tools:context=".ui.resetPasswordOtp.ResetPasswordOtpFragment">

   <ScrollView
       app:layout_constraintTop_toTopOf="parent"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:animateLayoutChanges="true">

           <ImageView
               android:id="@+id/app_logo_reset_password_otp"
               android:layout_width="@dimen/_150sdp"
               android:layout_height="@dimen/_40sdp"
               android:layout_marginTop="@dimen/_50sdp"
               android:src="@drawable/ic_moca"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:tint="@color/accent_color" />

           <include layout="@layout/fragment_mobile_o_t_p"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginTop="@dimen/_70sdp"
               app:layout_constraintTop_toBottomOf="@id/app_logo_reset_password_otp"/>


       </androidx.constraintlayout.widget.ConstraintLayout>

   </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>