<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logged_in_nav"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.technopolitan.mocaspaces.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/home_fragment">

        <action
            android:id="@+id/action_home_to_location_details"
            app:destination="@id/location_details" />
        <action
            android:id="@+id/action_home_fragment_to_my_bookings_fragment"
            app:destination="@id/my_bookings_fragment"
            app:popUpTo="@id/home_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/my_bookings_fragment"
        android:name="com.technopolitan.mocaspaces.ui.myBookings.MyBookingFragment"
        android:label="@string/my_bookings"
        tools:layout="@layout/fragment_my_booking">


    </fragment>

    <fragment
        android:id="@+id/location_details"
        android:name="com.technopolitan.mocaspaces.ui.locationDetails.LocationDetailsFragment"
        android:label="Location Details"
        tools:layout="@layout/fragment_location_details">


    </fragment>

</navigation>