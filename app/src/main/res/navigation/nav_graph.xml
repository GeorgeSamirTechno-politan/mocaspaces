<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splash_fragment">


    <dialog
        android:id="@+id/single_button_dialog"
        android:name="com.technopolitan.mocaspaces.ui.fragmentUtilities.SingleButtonDialogFragment"
        tools:layout="@layout/fragment_two_choose_dialog" />


    <dialog
        android:id="@+id/two_choose_dialog"
        android:name="com.technopolitan.mocaspaces.ui.fragmentUtilities.TwoChooseDialogFragment"
        tools:layout="@layout/fragment_two_choose_dialog" />


    <dialog
        android:id="@+id/date_picker_dialog"
        android:name="com.technopolitan.mocaspaces.ui.fragmentUtilities.DatePickerFragment"
        tools:layout="@layout/fragment_date_picker" />

    <dialog
        android:id="@+id/scanning_dialog"
        android:name="com.technopolitan.mocaspaces.ui.fragmentUtilities.ScanningFragment"
        android:label="@string/scanning"
        tools:layout="@layout/fragment_scanning" />

    <fragment
        android:id="@+id/no_internet_fragment"
        android:name="com.technopolitan.mocaspaces.ui.fragmentUtilities.NoInternetFragment"
        tools:layout="@layout/fragment_no_internet" />

    <fragment
        android:id="@+id/splash_fragment"
        android:name="com.technopolitan.mocaspaces.ui.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splash_to_start"
            app:destination="@id/start_fragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/main_graph"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/start_fragment"
        android:name="com.technopolitan.mocaspaces.ui.start.StartFragment"
        android:label="start"
        tools:layout="@layout/fragment_start">

        <action
            android:id="@+id/action_start_to_login"
            app:destination="@id/login_fragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/main_graph"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_start_to_register"
            app:destination="@id/register_fragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/main_graph"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/register_fragment"
        android:name="com.technopolitan.mocaspaces.ui.register.RegisterFragment"
        android:label="@string/register"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/login_fragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/main_graph"
            app:popUpToInclusive="true" />

    </fragment>


    <fragment
        android:id="@+id/login_fragment"
        android:name="com.technopolitan.mocaspaces.ui.login.LoginFragment"
        android:label="login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/register_fragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/main_graph"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_login_to_forget_password"
            app:destination="@id/forget_password_fragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/login_fragment"
            app:popUpToInclusive="true" />


    </fragment>


    <fragment
        android:id="@+id/forget_password_fragment"
        android:name="com.technopolitan.mocaspaces.ui.forgetPasswordMobile.ForgetPasswordMobileFragment"
        android:label="@string/forgot_password"
        tools:layout="@layout/fragment_forget_password_mobile">

        <action
            android:id="@+id/action_forget_password_to_otp_forgot_password"
            app:destination="@id/otp_forgot_password_fragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/login_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/reset_password_fragment"
        android:name="com.technopolitan.mocaspaces.ui.registerPassword.RegisterPasswordFragment"
        android:label="@string/reset_password"
        tools:layout="@layout/fragment_reset_password">

        <action
            android:id="@+id/action_reset_password_fragment_to_password_change_successfully_fragment"
            app:destination="@id/password_change_successfully_fragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/login_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/otp_forgot_password_fragment"
        android:name="com.technopolitan.mocaspaces.ui.resetPasswordOtp.ResetPasswordOtpFragment"
        android:label="@string/forgot_password"
        tools:layout="@layout/fragment_reset_password_otp">

        <action
            android:id="@+id/action_otp_forgot_password_to_reset_password"
            app:destination="@id/reset_password_fragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/login_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/password_change_successfully_fragment"
        android:name="com.technopolitan.mocaspaces.ui.passwordSaved.PasswordSavedFragment"
        android:label="@string/password_saved"
        tools:layout="@layout/fragment_password_saved">


    </fragment>


</navigation>