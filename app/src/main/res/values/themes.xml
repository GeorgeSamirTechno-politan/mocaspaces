<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Material3" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/accent_color</item>
        <item name="colorPrimaryDark">@color/accent_color</item>
        <item name="fontFamily">@font/gt_regular</item>
