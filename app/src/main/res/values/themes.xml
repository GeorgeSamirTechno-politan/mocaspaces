<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Material3" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent_color</item>
        <item name="colorPrimaryDark">@color/accent_color</item>
        <item name="fontFamily">@font/gt_regular</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="android:textCursorDrawable">@drawable/accent_cursor_shape</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/accent_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_moca_yellow</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Material3</item>
    </style>

    <style name="Theme.Material3" parent="Base.Theme.Material3" />

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="bold">
        <item name="android:fontFamily">@font/gt_bold</item>
    </style>

    <style name="medium">
        <item name="android:fontFamily">@font/gt_meduim</item>
    </style>

    <style name="light">
        <item name="android:fontFamily">@font/gt_light</item>
    </style>

    <style name="regular">
        <item name="android:fontFamily">@font/gt_regular</item>
    </style>

    <style name="oblique">
        <item name="android:fontFamily">@font/gt_oblique</item>
    </style>

    <style name="ultraBold">
        <item name="android:fontFamily">@font/gt_ultra_bold</item>
    </style>

    <style name="progress_text_Style" parent="medium">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/accent_color</item>
    </style>

    <style name="no_internet_connection_text_style" parent="medium">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@color/accent_color</item>
    </style>

    <style name="app_button_style" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/gt_meduim</item>
        <item name="cornerRadius">@dimen/_50sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="backgroundTint">@color/accent_color</item>
        <item name="android:layout_marginStart">@dimen/_32sdp</item>
        <item name="android:layout_marginEnd">@dimen/_32sdp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginBottom">@dimen/_16sdp</item>
    </style>

    <style name="progress_button_style">
        <item name="fontFamily">@font/gt_meduim</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:layout_marginStart">@dimen/_32sdp</item>
        <item name="android:layout_marginEnd">@dimen/_32sdp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginBottom">@dimen/_16sdp</item>
        <item name="spinning_bar_padding">@dimen/_10sdp</item>
    </style>

    <style name="progress_button_style.white" parent="progress_button_style">
        <item name="android:textColor">@color/black</item>
        <item name="spinning_bar_color">@color/accent_color</item>
    </style>

    <style name="header_dialog_text_style" parent="medium">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_30sdp</item>
    </style>

    <style name="message_dialog_text_style" parent="regular">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_30sdp</item>
    </style>

    <style name="circle_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="text_input_layout_style" parent="default_field_margin">
        <item name="boxCornerRadiusBottomEnd">@dimen/_28sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_28sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_28sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_28sdp</item>
        <item name="android:labelTextSize">@dimen/_50sdp</item>
        <item name="android:keyTextSize">@dimen/_50sdp</item>
        <item name="autoSizeMinTextSize">@dimen/_50sdp</item>
        <item name="theme">@style/border_text_input_layout</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeErrorColor">@color/error_color</item>
        <item name="errorTextColor">@color/error_color</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="boxStrokeWidthFocused">@dimen/_1sdp</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="selectableItemBackground">@drawable/text_input_white_selector</item>
        <item name="boxCollapsedPaddingTop">@dimen/_1sdp</item>
        <item name="passwordToggleTint">@color/white</item>
        <item name="errorIconDrawable">@drawable/ic_baseline_error_outline_24</item>
        <item name="errorIconTint">@color/error_color</item>
        <item name="hintTextAppearance">@style/hint_text_appearance</item>
    </style>

    <style name="border_text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="boxStrokeWidthFocused">@dimen/_2sdp</item>
        <item name="boxStrokeErrorColor">@color/error_color</item>
    </style>

    <style name="hint_text_appearance" parent="medium">
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="labelStyle">@style/medium</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="edit_text_style" parent="light">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/accent_cursor_shape</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="maxLines">1</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
    </style>


    <style name="default_field_margin">
        <item name="android:layout_marginEnd">@dimen/_37sdp</item>
        <item name="android:layout_marginStart">@dimen/_37sdp</item>
    </style>

