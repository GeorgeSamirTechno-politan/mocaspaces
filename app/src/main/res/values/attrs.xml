<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TransitionButton">
        <attr name="defaultColor" format="string" />
        <attr name="loaderColor" format="string" />
    </declare-styleable>

    <declare-styleable name="OtpEditText">
        <attr name="oev_length" format="integer|reference" />
        <attr name="oev_primary_color" format="color|reference" />
        <attr name="oev_secondary_color" format="color|reference" />
        <attr name="oev_text_color" format="color|reference" />

        <attr name="oev_box_style" format="string|reference" />

        <attr name="oev_mask_input" format="boolean" />
        <attr name="oev_mask_character" format="string|reference" />

    </declare-styleable>

    <declare-styleable name="WheelPicker">
        <attr name="wheel_data" format="reference" />
        <attr name="wheel_selected_item_position" format="integer" />
        <attr name="wheel_item_text_size" format="dimension" />
        <attr name="wheel_item_text_color" format="color" />
        <attr name="wheel_selected_item_text_color" format="color" />
        <attr name="wheel_same_width" format="boolean" />
        <attr name="wheel_maximum_width_text" format="string" />
        <attr name="wheel_maximum_width_text_position" format="integer" />
        <attr name="wheel_visible_item_count" format="integer" />
        <attr name="wheel_item_space" format="dimension" />
        <attr name="wheel_cyclic" format="boolean" />
        <attr name="wheel_indicator" format="boolean" />
        <attr name="wheel_indicator_color" format="color" />
        <attr name="wheel_indicator_size" format="dimension" />
        <attr name="wheel_curtain" format="boolean" />
        <attr name="wheel_curtain_color" format="color" />
        <attr name="wheel_atmospheric" format="boolean" />
        <attr name="wheel_curved" format="boolean" />
        <attr name="wheel_item_align" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="wheel_font_path" format="string" />

    </declare-styleable>

    <declare-styleable name="SimplePullToRefreshLayout">
        <attr name="max_offset_top" format="dimension" />
        <attr name="trigger_offset_top" format="dimension" />
    </declare-styleable>

    <declare-styleable name="EasyPullLayout_LayoutParams">
        <attr name="layout_type" format="enum">
            <enum name="topView" value="0" />
            <enum name="content" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LottiePullToRefreshLayout">
        <attr name="pull_to_refresh_lottieFile" format="reference" />
    </declare-styleable>

    <declare-styleable name="BottomNavigationCircles">
        <attr name="circleColor" format="color" />
        <attr name="darkIcon" format="boolean" />
        <attr name="default_rounded_position" format="integer" />
        <attr name="backgroundShape" format="enum">
            <enum name="circle" value="0" />
            <enum name="roundedRectangle" value="1" />
        </attr>
        <attr name="customBackgroundShape" format="reference" />
    </declare-styleable>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>
</resources>